<form action="/cities/<%= @city.id %>" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <input type="text" class="form-control" placeholder="Name" name="name" value="<%= @city.name %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Capital</label>
    <input type="text" class="form-control" placeholder="Capital" name="capital" value="<%= @city.capital %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Place of Interest</label>
    <input type="text" class="form-control" placeholder="Place of Interest" name="place_of_interest" value="<%= @city.place_of_interest %>">
  </div>

  <button type="submit" class="btn btn-default" value="PUT">Submit</button>

  <% if (@city.id != '') %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
